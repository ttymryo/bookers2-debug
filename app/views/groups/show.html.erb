<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Group detail</h2>
  		<table class='table'>
  		  <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>オーナー</th>
            <th>メンバー数</th>
          </tr>
        </thead>
        <tbody>
    		  <tr>
            <td><%= image_tag @group.get_image, size:"50x50" %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td><%= @user.name %></td>
            <td><%= @group.group_users.count %></td>
            <% if @group.owner_id == current_user.id %>
              <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success edit_group_#{@group.id}" %></td>
              <td><%= link_to "Destroy", group_path(@group), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger destroy_group_#{@group.id}"%></td>
            <% else %>
              <td><%= link_to 'Join Group', group_users_path, class: "btn btn-sm btn-success " %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <table class='table'>
        <thead>
          <tr>
            <th>メンバー</th>
          </tr>
        </thead>
        <tbody>
          <% @group.group_users.each |user| %>
            <tr>
              <td><%= image.tag user.get_profile_image, size: '50x50' %></td>
              <td><%= link_to user.name, user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>