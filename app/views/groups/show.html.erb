<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Group detail</h2>
  		<table class='table'>
  		  <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>オーナー</th>
            <th colspan='3'></th>
          </tr>
        </thead>
        <tbody>
    		  <tr>
            <td><%= image_tag @group.get_image, size:"50x50" %></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td><%= @user.name %></td>
            <% if @group.owner_id == current_user.id %>
              <td><%= link_to 'Notice an Event', new_group_group_mail_path(@group), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-sm btn-success edit_group_#{@group.id}" %></td>
              <td><%= link_to "Destroy", group_path(@group), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger destroy_group_#{@group.id}"%></td>
            <% else %>
              <td>
                <% if @group.group_users.find_by(user_id: current_user) %>
                  <%= link_to 'Leave this Group', group_group_users_path(@group,id: @group.id), method: :delete,  class: "btn btn-sm btn-danger" %>
                <% else %>
                  <%= link_to 'Join this Group', group_group_users_path(@group,id: @group.id), method: :post,  class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <% if @group.group_users.find_by(user_id: current_user) %>
        <h3>Group Users</h3>
        <table class='table'>
          <tbody>
            <% @group.group_users.each do |user| %>
              <tr>
                <td><%= image_tag user.user.get_profile_image, size:'50x50' %></td>
                <td><%= link_to user.user.name, user.user %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>