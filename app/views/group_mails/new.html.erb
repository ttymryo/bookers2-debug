<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Event Mail</h2>
    <%= render 'layouts/errors', obj: @group_mail %>
    <%= form_with model: @group_mail, url: group_group_mails_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :content %>
        <%= f.text_area :content, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit '送信', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>