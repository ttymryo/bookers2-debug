<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr id="book_<%= @book.id %>">
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td class="favorites"><%= render partial: "favorites/favorites", locals: { book: @book } %></td>
          <td class ="book_count<%= @book.id %>">コメント数:<%= @book.book_comments.count %></td>
          <td>
            <p>評価 :<%= @book.star%>点</p>
            <div id="star-rate<%= @book.id%>"></div>
            <script>
              $('#star-rate<%= @book.id%>').raty({
                size      : 36,
                starOff   : '<%= asset_path('/star-off.png') %>',
                starOn    : '<%= asset_path('/star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= @book.star %>,
              });
            </script>
          </td>
          <td>閲覧数:<%= @book.book_views.count %></td>
          <% if @book.user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>
      <table class="comment<%= @book_comment.id %>">
        <%= render partial: 'book_comments/index', locals: {book: @book} %>
      </table class="new_comment">
      <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>
  </div>
</div>