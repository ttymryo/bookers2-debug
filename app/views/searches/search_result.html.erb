<% if @range == "User" %>
<h2>User search for "<%= @word %>" </h2>
  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
        <td></td>
        <td>Name</td>
        <td>Introduction</td>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%=  image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.name %></td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
  <h2>Book search for "<%= @word %>" </h2>
  <table class="table table-hover table-inverse">
    <tbody>
      <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>